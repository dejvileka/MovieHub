<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:padding="10dp"
            android:text="movieHub"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.chip.ChipGroup
            android:layout_margin="10dp"
            app:singleSelection="true"
            android:id="@+id/chip_categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvTitle">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_1_all"
                style="@style/Widget.Material3.Chip.Filter.Elevated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/material_dynamic_primary20"
                android:checked="false"
                android:text="all" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_2_movies"
                style="@style/Widget.Material3.Chip.Filter.Elevated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/material_dynamic_primary20"
                android:checked="true"
                android:text="Movies" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_3_shows"
                style="@style/Widget.Material3.Chip.Filter.Elevated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/material_dynamic_primary20"
                android:checked="false"
                android:text="Shows" />

            <com.google.android.material.chip.Chip
                style="@style/Widget.Material3.Chip.Filter.Elevated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/material_dynamic_primary20"
                android:checked="false"
                android:text="Favorites" />



        </com.google.android.material.chip.ChipGroup>


        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/bannerCarousel"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/chip_categories" />

        <!-- Genres/ Categories -->
        <!-- ... Horizontal RecyclerView or ChipGroup -->

        <!-- Recently Watched Movies -->
        <!-- ... Horizontal RecyclerView -->

        <!-- Recommended Movies -->
        <!-- ... Vertical RecyclerView -->

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
