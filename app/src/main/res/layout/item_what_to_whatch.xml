<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="movie"
            type="com.dejvidleka.data.local.models.MovieResult">

        </variable>

        <variable
            name="clickListener"
            type="android.view.View.OnClickListener"></variable>
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/rv_element"
        android:layout_width="130dp"
        android:layout_height="280dp"
        android:layout_margin="4dp"
        android:padding="5dp"
        android:background="@drawable/round_drawable_shape"
        android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:id="@+id/movie_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="@drawable/cardview_movies"
        android:scaleType="fitXY"
        app:imageUrl="@{movie.poster_path}"
        app:shapeAppearance="?attr/shapeAppearanceCornerExtraLarge"
        tools:src="@drawable/movie"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>